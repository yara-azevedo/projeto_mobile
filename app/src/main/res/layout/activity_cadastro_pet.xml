<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bckgrnd_itens"
    android:orientation="vertical"

    tools:context=".CadastroPetActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical"
        android:clickable="false"
        tools:context=".CadastroPetActivity">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="223dp"
            android:layout_height="46dp"
            android:layout_margin="20dp"
            android:layout_marginStart="21dp"
            android:background="@drawable/bckgrnd"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHighlight="#F6EEEE"
            android:textColorHint="#817D7D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress4"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_margin="20dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="41dp"
            android:background="@drawable/bckgrnd"
            android:ems="10"
            android:hint="Idade"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHighlight="#F6EEEE"
            android:textColorHint="#817D7D"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bckgrnd"
            android:ems="10"
            android:hint="Sexo"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHighlight="#F6EEEE"
            android:textColorHint="#817D7D"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="167dp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress5"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_margin="20dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bckgrnd"
            android:ems="10"
            android:hint="Peso"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHighlight="#F6EEEE"
            android:textColorHint="#817D7D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

        <EditText
            android:id="@+id/editTextTextEmailAddress3"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_margin="20dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bckgrnd"
            android:ems="10"
            android:hint="Raça"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHighlight="#F6EEEE"
            android:textColorHint="#817D7D"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextEmailAddress5"
            app:layout_constraintHorizontal_bias="0.875"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"

            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#B01BCA"
            android:text="Adicionar"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="#F6F1F1"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress5" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="181dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="182dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bckgrnd"
            android:ems="10"
            android:hint="Espécie"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHighlight="#F6EEEE"
            android:textColorHint="#817D7D"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextEmailAddress"
            app:layout_constraintHorizontal_bias="0.875"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="167dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddress2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.055"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/icone_bw" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="95dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_add" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>